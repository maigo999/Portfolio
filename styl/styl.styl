@import url(https://fonts.googleapis.com/earlyaccess/notosansjp.css);

header
    height: 50px
    width: 100%
    background: white
    opacity: 0.6
    position: fixed
    display: flex
    align-items: center
    z-index 999
    font-family: 'Noto Sans JP';
    a
        text-decoration: none
        color:black
        &:hover
            color: gray
    h1
        margin-left: 50px
main
    height:auto
.box
    height: 768px
    width: 100%
    margin: auto
#top

    display: flex
    align-items: center
    justify-content: center

    .top-title
        display: flex
        align-items: center
        justify-content: center
        width: 615px
        height: 200px
        background: white
        opacity: 0.75
        border: 3px gray dotted
        font-family: 'Noto Sans JP';
        font-size: 30px
        color: gray
        @media screen and (max-width: 960px)
            width: 70%
            font-size 28px
         @media screen and (max-width: 480px)
             width: 95%
#profile
    background: white
    opacity: 0.5
    height: auto
    margin-bottom: 50px
    .profile-box
        width: 100%
        height 100%
        margin: auto

        .profile-h2
            border: 3px gray dotted
            margin: 50px auto 30px auto
            width: 300px
            height: 75px
            display: flex
            justify-content: center
            align-items: center
            font-family: 'Noto Sans JP';

        .profile-content
            margin: auto
            padding:50px 30px 50px 30px
            height: auto
            width: 960px
            border: 3px gray dotted
            font-family: 'Noto Sans JP';
            display grid
            grid-auto-rows: 50px;
            grid-template-columns: repeat(auto-fill, 400px);
            justify-content: space-around
            justify-content: center
            @media screen and (max-width: 960px)
                width: 90%
                grid-template-rows: 90px 200px 150px 150px;
            @media screen and (max-width: 480px)
                width: 95%
                grid-template-columns: repeat(auto-fill, 300px);

            #boxA
                order 1
                grid-row: 1/2
                @media screen and (max-width: 960px)
                    grid-row: 1/1
            #boxB
                order 3
                grid-row: 3/7
                @media screen and (max-width: 960px)
                    order: 2
                    grid-row: 2/2
            #boxC
                order 2
                grid-row: 1/3
                @media screen and (max-width: 960px)
                    order: 3
                    grid-row: 3/3
            #boxD
                order 4
                grid-row: 4/7
                padding-top: 30px
                @media screen and (max-width: 960px)
                    grid-row: 4/4
            .grid-box
                width: 100%
                height 100%
                .flex-box
                    display: flex
                    width: auto
                    justify-content: left
                    .introduction
                        height: 160px
                        @media screen and (max-width: 480px)
                            font-size: 15px
                    p
                        font-size: 17px
                        word-wrap: break-word
                        width: 350px
                        height: auto
                        overflow: hidden
                        &:last-child
                            margin-bottom: 0
                .name
                    text-align: center
                    font-size: 20pt

                p
                    text-align: left
                    height auto
                h3
                    height 30px
                    font-size: 20px
                    text-align: left
            .flex-box2
                display: flex
                justify-content: left 
                align-items: flex-start
.back-para
    background-image: url("../img/back-img.jpg")
    background-attachment: fixed
    background-size: cover
    background-repeat: no-repeat
#content
    height: auto
    padding-top: 50px
.content
        width: 960px
        margin: auto
        display: flex
        flex-flow: wrap
        justify-content: space-around
        font-family: 'Noto Sans JP';
        @media screen and (max-width: 960px)
            width: 95%
        a
            text-decoration: none
            color: black
            margin-top: 30px
            margin-bottom: 30px
            width: 300px
            height: 400px
            background: white
            border-radius: 5px
            @media screen and (max-width: 960px)
                margin-top: 20px
                margin-bottom: 20px
            .content-textbox
                width 250px
                height 200px
                margin 180px auto auto auto
                background: white
                border-radius: 5px
                opacity 0.8
                text-align: center
                h2
                    font-size 12pt
                    padding-top: 5px
                p
                    font-size: 11pt
                    padding-top 5px
                    width 80%
                    margin: auto
            &:hover
                box-shadow: 0px 0px 6px 2px rgba(0,0,0,0.4)
                transition: all 0.2s
        for $num in 1..6
            .content-0{$num}
                background-image: url('../img/content0' + $num + '.png')
                background-size: cover
                background-position: center;
    .content-h2
        border: 3px gray dotted
        margin: 0 auto 30px auto
        width: 300px
        height: 75px
        display: flex
        background: white
        opacity: 0.7
        justify-content: center
        align-items: center
        font-family: 'Noto Sans JP';
footer
    height: 100px
    background: white
    display: flex
    justify-content: center
    align-items: center
    flex-direction : column
    .link-icons
        width: 10%
        display: flex
        justify-content: space-evenly
        a
            color: black
            &:hover
                opacity 0.5
    p
        margin-bottom: 20px



