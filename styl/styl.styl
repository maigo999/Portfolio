@import url(https://fonts.googleapis.com/earlyaccess/notosansjp.css);

header
    height: 50px
    width: 100%
    background: white
    opacity: 0.6
    position: fixed
    display: flex
    align-items: center
    z-index 999
    a
        text-decoration: none
        color:black
        &:hover
            color: gray
    h1
        margin-left: 50px
main
    height:auto
.box
    height: 768px
    width: 100%
    margin: auto
#top

    display: flex
    align-items: center
    justify-content: center

    .top-title
        display: flex
        align-items: center
        justify-content: center
        width: 615px
        height: 200px
        background: white
        opacity: 0.75
        border: 3px gray dotted
        font-family: 'Noto Sans JP';
        font-size: 30px
        color: gray

#profile
    background: white
    opacity: 0.5
    .profile-box
        width: 960px
        margin: auto
        .profile-h2
            border: 3px gray dotted
            margin: 30px auto 30px auto
            width: 300px
            height: 75px
            display: flex
            justify-content: center
            align-items: center
            font-family: 'Noto Sans JP';

        .profile-content
            margin: auto
            height: 543px
            width: 615px
            border: 3px gray dotted
            display: flex
            justify-content: center

            .profile-text
                margin-top: 45px
                width: 458px
                height: 390px
                font-family: 'Noto Sans JP';
                p
                    margin-bottom: 15px
                    font-size: 18px
                h3
                    font-size: 20px

.back-para
    background-image: url("../img/back-img.jpg")
    background-attachment: fixed
    background-size: cover
    background-repeat: no-repeat
#content
    height: auto
    padding-top: 50px
.content
        width: 960px
        margin: auto
        display: flex
        flex-flow: wrap
        justify-content: space-around
        font-family: 'Noto Sans JP';
        
        a
            text-decoration: none
            color: black
            margin-top: 50px
            margin-bottom: 50px
            width: 300px
            height: 400px
            background: white
            border-radius: 5px

            .content-textbox
                width 250px
                height 225px
                margin 155px auto auto auto
                background: white
                border-radius: 5px
                opacity 0.8
                text-align: center
                h2
                    font-size 12pt
                    padding-top: 5px
                p
                    font-size: 11pt
                    padding-top 5px
                    width 80%
                    margin: auto
            &:hover
                box-shadow: 0px 0px 6px 2px rgba(0,0,0,0.4)
                transition: all 0.2s
        for $num in 1..6
            .content-0{$num}
                background-image: url('../img/content0' + $num + '.png')
                background-size: cover
                background-position: center;
    .content-h2
        border: 3px gray dotted
        margin: 0 auto 30px auto
        width: 300px
        height: 75px
        display: flex
        background: white
        opacity: 0.7
        justify-content: center
        align-items: center
        font-family: 'Noto Sans JP';
footer
    height: 100px
    background: white
    display: flex
    justify-content: center
    align-items: flex-end

    p
        margin-bottom: 20px



